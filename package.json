{
	"scripts": {
		"format": "biome format . --write",
		"lint": "lint-staged --allow-empty",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"husky": "9.1.7",
		"lint-staged": "^16.2.6",
		"turbo": "^2.6.1"
	},
	"packageManager": "pnpm@10.0.0",
	"engines": {
		"node": ">=22.0"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,cjs,mjs,cts,mts,json,jsonc}": [
			"biome lint --write --no-errors-on-unmatched",
			"biome format --write"
		]
	}
}
