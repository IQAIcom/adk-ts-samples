{
	"name": "@iqai/adk-ts-samples",
	"version": "1.0.0",
	"description": "IQAI Agent Development Kit TypeScript samples and agents",
	"private": true,
	"scripts": {
		"format": "biome format . --write && prettier --write '**/*.{md,mdx}'",
		"lint": "lint-staged --allow-empty",
		"prepare": "husky",
		"clean": "turbo clean && rm -rf node_modules pnpm-lock.yaml",
		"build": "turbo build",
		"dev": "turbo dev"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"husky": "9.1.7",
		"lint-staged": "^16.2.6",
		"prettier": "^3.4.2",
		"turbo": "^2.6.1"
	},
	"packageManager": "pnpm@10.0.0",
	"engines": {
		"node": ">=22.0"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,cjs,mjs,cts,mts,json,jsonc}": [
			"biome lint --write --no-errors-on-unmatched",
			"biome format --write"
		],
		"*.{md,mdx}": [
			"prettier --write"
		]
	}
}
