# TaskMaster Bot Configuration
# Copy this file to .env and fill in your values

# Enable debug logging (true/false)
ADK_DEBUG=false

# Required: Google API key for Gemini model access
GOOGLE_API_KEY=

# Database Configuration
DATABASE_URL= # PostgreSQL connection string, e.g., postgresql://username:password@localhost:5432/taskmaster

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN= # get this from @BotFather on Telegram
TELEGRAM_CHANNEL_ID= # your channel/chat ID where notifications will be sent
